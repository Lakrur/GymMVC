@model GymDomain.Model.Member

@{
    ViewData["Title"] = "Деталі про клієнта";
}

<h1 class="mt-4">Деталі про клієнта</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Адреса залу
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gym.Adress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subscription)
        </dt>
        <dd class = "col-sm-10">

            @if (Model.Subscription != null)
                {
                    @Html.DisplayFor(modelItem => Model.Subscription.Type)
                }
                else
                {
                    <span>Без підписки</span>
                }
        </dd>
        
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroupClasses)
           
        </dt>
        <dd class="col-sm-10">
            @if (Model.GroupClasses.Count() == 0)
            {
                <span>Без групових класів</span>
            }
            else
            {
                @foreach (var classItem in Model.GroupClasses)
                {
                    <span>@classItem.Name<br /></span>
                    <span>@classItem.Schedule<br /></span>
                }
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin") || User.Identity.Name == Model.Email )
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm me-2">Редагувати</a>
    }
    <a onclick="history.back()" class="btn btn-outline-secondary btn-sm ">Назад</a>
</div>
