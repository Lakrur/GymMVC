@model GymDomain.Model.Trainer

@{
    ViewData["Title"] = "Деталі";
}

<h1 class="mt-2">Повна інформація </h1>

<div>
    <hr />
    <dl class="row">
        
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
       
        <td>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gym.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroupClasses)
        </dt>
        <dd class="col-sm-10">
            @foreach (var groupClass in Model.GroupClasses)
            {
                <div>@groupClass.Name</div>
            }
        </dd>
    </dl>
</div>
<div>
     @if (User.IsInRole("admin"))
                    {
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm me-2">Редагувати</a> 
                    }
    <a onclick="history.back()" class="btn btn-outline-secondary btn-sm ">Назад</a>
</div>
